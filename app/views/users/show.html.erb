<div class="header">
  <div class="header__profile">
    <div class="header__profile--picture"></div>
    <h3> <%= @user[:username] %> </h3>
  </div>
</div>

<div class="posts">
  <% @posts.each do |post| %>
    <div class="post">
      <p class="post__content"><%= post.content %></p>
      <div class="post__footer">
        <p class="post__weather--text"><%= post.weather_description %></p>
        <p class="post__footer--time"><%= post.created_at.strftime '%l:%M %P â€“ %a, %d/%m/%Y' %></p>
        <p class="post__footer--city"><%= post.city %></p>
      </div>
    </div>
  <% end %>  
</div>

<script>
  document.querySelector('#new_post').addEventListener('click', e => {
    e.preventDefault()
    const ip = '<%= request.remote_ip %>'
    const content = e.target.previousElementSibling.value
    navigator.geolocation.getCurrentPosition(
      position => postMemoryByGPS(position, content, '<%= form_authenticity_token %>'),
      error => postMemoryByIp(content, ip, '<%= form_authenticity_token %>')
    )
  })

  window.addEventListener('scroll', fetchMorePosts)
</script>
