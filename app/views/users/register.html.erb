<div class="dark-background"></div>

<div class="register-content">
  <div class="main-banner">
    <h2>Mem√≥rias do Tempo</h2>
    <h1>Register</h1>
  </div>

  <%= form_tag(users_path, :method => 'post', :class => 'register-form') do%>
    <%= text_field_tag 'username', nil, class: 'default-form-input' %>
    <%= text_field_tag 'password', nil, class: 'default-form-input', type: 'password' %>
    <%= submit_tag 'Submit', :id => 'Register' %>
    <p class="error"><%= @error %></p>
    <p class="small">Already have an account? <a href="/">Login</a></p>
  <% end %>
</div>

